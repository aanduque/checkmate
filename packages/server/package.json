{
  "name": "@checkmate/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "echo 'Server build complete (Bun runs TypeScript directly)'",
    "start": "bun run src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@checkmate/domain": "workspace:*",
    "@checkmate/application": "workspace:*",
    "@checkmate/infrastructure": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "@types/bun": "latest"
  }
}
