{
  "name": "@checkmate/shared",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./openrpc.json": "./openrpc.json"
  },
  "files": [
    "dist",
    "openrpc.json"
  ],
  "scripts": {
    "build": "bun run generate && tsc",
    "generate": "bun run scripts/generate.ts",
    "validate": "bun run scripts/validate.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@open-rpc/meta-schema": "^1.14.6",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "@types/js-yaml": "^4.0.9"
  }
}
